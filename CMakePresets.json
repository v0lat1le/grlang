{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug_base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GRLANG_NODE_BUILD_TESTS":  "ON",
                "GRLANG_PARSE_BUILD_TESTS": "ON",
                "GRLANG_EVAL_BUILD_TESTS":  "ON",
                "GRLANG_CODEGEN_LLVM_IR_BUILD": "ON",
                "GRLANG_CODEGEN_X86_64_BUILD":  "ON",
                "GRLANG_CODEGEN_ARM_64_BUILD":  "ON"
            }
        },
        {
            "name": "debug_gcc",
            "inherits": "debug_base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "debug_clang",
            "inherits": "debug_gcc",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
                "GRLANG_CODEGEN_LLVM_IR_BUILD_TESTS":  "ON"
            }
        },
        {
            "name": "debug_msvc",
            "inherits": "debug_base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/EHsc /W4"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug_gcc",
            "configurePreset": "debug_gcc"
        },
        {
            "name": "debug_clang",
            "configurePreset": "debug_clang"
        },
        {
            "name": "debug_msvc",
            "configurePreset": "debug_msvc",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "debug_gcc",
            "configurePreset": "debug_gcc"
        },
        {
            "name": "debug_clang",
            "configurePreset": "debug_clang"
        },
        {
            "name": "debug_msvc",
            "configurePreset": "debug_msvc",
            "configuration": "Debug"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug_gcc",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug_gcc"
                },
                {
                    "type": "build",
                    "name": "debug_gcc"
                },
                {
                    "type": "test",
                    "name": "debug_gcc"
                }
            ]
        },
        {
            "name": "debug_clang",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug_clang"
                },
                {
                    "type": "build",
                    "name": "debug_clang"
                },
                {
                    "type": "test",
                    "name": "debug_clang"
                }
            ]
        },
        {
            "name": "debug_msvc",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug_msvc"
                },
                {
                    "type": "build",
                    "name": "debug_msvc"
                },
                {
                    "type": "test",
                    "name": "debug_msvc"
                }
            ]
        }
    ]
}
