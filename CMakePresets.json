{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug_base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GRLANG_PARSE_BUILD_TESTS": "ON",
                "GRLANG_EVAL_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "debug_gcc_like",
            "inherits": "debug_base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "debug_msvc",
            "inherits": "debug_base",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/EHsc /W4"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug_gcc_like",
            "configurePreset": "debug_gcc_like"
        },
        {
            "name": "debug_msvc",
            "configurePreset": "debug_msvc",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "debug_gcc_like",
            "configurePreset": "debug_gcc_like"
        },
        {
            "name": "debug_msvc",
            "configurePreset": "debug_msvc",
            "configuration": "Debug"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug_gcc_like",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug_gcc_like"
                },
                {
                    "type": "build",
                    "name": "debug_gcc_like"
                },
                {
                    "type": "test",
                    "name": "debug_gcc_like"
                }
            ]
        },
        {
            "name": "debug_msvc",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug_msvc"
                },
                {
                    "type": "build",
                    "name": "debug_msvc"
                },
                {
                    "type": "test",
                    "name": "debug_msvc"
                }
            ]
        }
    ]
}
